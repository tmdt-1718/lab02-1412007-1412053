<%= render partial: 'flash_message', locals: {notice: flash} %>

<div class="row">
	<div class="col-md-12 mt-2">
		<h1>New Message</h1>
	</div>
</div>
<div class="row mb-5">
	<div class="col-md-12">
		<%= form_with scope: :message, url: create_message_path, local: true do |f|%>
		<div class="form-group">
			<label for="">Subject</label>
			<%= f.text_field :title, :required => true, class: "form-control" %>
		</div>
		<div class="form-group">
			<label for="">
				Content
			</label>
			<%= f.text_area :content, :required => true, class: "form-control" %>
		</div>

		<div class="form-group">
			<label for="">To</label>
			<%= f.collection_select :receiverid, @friends, :id, :name, {require: true}, {class: "form-control"} %>
		</div>
		
		<div class="form-group">
			<label for="">Image</label>
			<%= f.file_field :image, class: "form-control" %>
		</div>

		<div class="row container mt-4">
			<button type="submit" class="btn btn-primary">Send</button>
		</div>		
		<% end %>
	</div>
</div>